// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type PostData {
  title     String
  subtitle  String
  innerPost PostData?
  imageUrl  String?
}

model Post {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  postData PostData
  created  DateTime @default(now())
}
